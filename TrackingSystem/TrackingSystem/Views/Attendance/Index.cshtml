@model IEnumerable<TrackingSystem.Models.Attendance>

@{
    ViewBag.Title = "Visits";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Check in", "CheckIn")
</p>
<p>
    @Html.ActionLink("Check out", "CheckOut")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VisitorCard.VisitorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CheckIn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CheckOut)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VisitorCard.VisitorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CheckIn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CheckOut)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.AttendanceId })
        </td>
    </tr>
}

</table>
